{
	"name": "@perseidesjs/notification-nodemailer",
	"version": "1.1.0",
	"description": "A Medusa plugin for sending notifications via Nodemailer (SMTP)",
	"author": "adevinwild",
	"license": "MIT",
	"main": "./.medusa/server/src/index.js",
	"types": "./.medusa/server/src/index.d.ts",
	"files": [
		".medusa/server"
	],
	"exports": {
		"./package.json": "./package.json",
		"./providers/*": {
			"types": "./.medusa/server/src/providers/*/index.d.ts",
			"default": "./.medusa/server/src/providers/*/index.js"
		},
		"./*": {
			"types": "./.medusa/server/src/*.d.ts",
			"default": "./.medusa/server/src/*.js"
		}
	},
	"keywords": [
		"medusa-plugin-integration",
		"medusa-plugin-notification",
		"medusa-v2"
	],
	"scripts": {
		"build": "medusa plugin:build",
		"dev": "medusa plugin:develop",
		"prepublishOnly": "medusa plugin:build",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "yarn build && changeset publish",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "tsc --noEmit",
		"prepare": "husky"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@epic-web/config": "^1.21.0",
		"@medusajs/admin-sdk": "2.4.0",
		"@medusajs/cli": "2.4.0",
		"@medusajs/framework": "2.4.0",
		"@medusajs/icons": "2.4.0",
		"@medusajs/medusa": "2.4.0",
		"@medusajs/test-utils": "2.4.0",
		"@medusajs/ui": "4.0.4",
		"@mikro-orm/cli": "6.4.3",
		"@mikro-orm/core": "6.4.3",
		"@mikro-orm/knex": "6.4.3",
		"@mikro-orm/migrations": "6.4.3",
		"@mikro-orm/postgresql": "6.4.3",
		"@swc/core": "1.5.7",
		"@types/node": "^20.0.0",
		"@types/nodemailer": "^6.4.17",
		"@types/react": "^18.3.2",
		"@types/react-dom": "^18.2.25",
		"awilix": "^8.0.1",
		"eslint": "^9.30.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"nodemailer": "^7.0.5",
		"pg": "^8.13.0",
		"prettier": "^3.6.2",
		"prop-types": "^15.8.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.2",
		"vite": "^5.2.11",
		"yalc": "^1.0.0-pre.53"
	},
	"peerDependencies": {
		"@medusajs/admin-sdk": "2.4.0",
		"@medusajs/cli": "2.4.0",
		"@medusajs/framework": "2.4.0",
		"@medusajs/icons": "2.4.0",
		"@medusajs/medusa": "2.4.0",
		"@medusajs/test-utils": "2.4.0",
		"@medusajs/ui": "4.0.3",
		"@mikro-orm/cli": "6.4.3",
		"@mikro-orm/core": "6.4.3",
		"@mikro-orm/knex": "6.4.3",
		"@mikro-orm/migrations": "6.4.3",
		"@mikro-orm/postgresql": "6.4.3",
		"awilix": "^8.0.1",
		"nodemailer": "^7.0.5",
		"pg": "^8.13.0"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "yarn@4.9.2",
	"lint-staged": {
		"*.{js,jsx,ts,tsx,mjs,cjs}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		]
	}
}
